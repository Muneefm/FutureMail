<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/img"
    android:layout_width="wrap_content"
    android:src="@drawable/new_mail"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/titleMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:textSize="20dp"
        android:text="Send a Message to Future"
        android:layout_centerHorizontal="true"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleMsg"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/LinkWater"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title" />

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select a future Date"
            android:textColor="@color/LinkWater"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:editable="false"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:hint="Pick a Date" />



        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Message"
            android:textColor="@color/LinkWater"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:hint="Write a custom Message Here \nYou will recieve this in future" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/msg_btn"
                android:elevation="20dp"
                android:paddingVertical="10dp"
                android:backgroundTint="@color/indigo900"
                android:gravity="center"
                android:text="Send To Future"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
</ScrollView>